{
  "name": "filebus",
  "version": "0.1.1",
  "description": "I/O based on inotify and file watchers",
  "main": "cjs/index.js",
  "scripts": {
    "build": "npm run cjs && npm run test",
    "cjs": "ascjs esm cjs && npm run clean:fb && npm run clean:fbin && npm run clean:fbout && npm run clean:require",
    "clean:fb": "sed -i \"s/Object.defineProperty(exports, '__esModule', {value: true}).default/module.exports/\" cjs/index.js",
    "clean:fbin": "sed -i \"s/Object.defineProperty(exports, '__esModule', {value: true}).default/module.exports/\" cjs/filebus-in.js",
    "clean:fbout": "sed -i \"s/Object.defineProperty(exports, '__esModule', {value: true}).default/module.exports/\" cjs/filebus-out.js",
    "clean:require": "sed -i 's/(m => m.__esModule [^)]*)//' cjs/filebus-in.js && sed -i 's/(m => m.__esModule [^)]*)//' cjs/index.js",
    "coveralls": "cat ./coverage/lcov.info | coveralls",
    "test": "istanbul cover test/index.js"
  },
  "keywords": [
    "file",
    "bus",
    "inotify",
    "channel"
  ],
  "author": "Andrea Giammarchi",
  "license": "ISC",
  "devDependencies": {
    "ascjs": "^3.0.1",
    "coveralls": "^3.0.7",
    "istanbul": "^0.4.5"
  },
  "module": "esm/index.js",
  "dependencies": {
    "inotifywait-spawn": "^1.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/WebReflection/filebus.git"
  },
  "bugs": {
    "url": "https://github.com/WebReflection/filebus/issues"
  },
  "homepage": "https://github.com/WebReflection/filebus#readme"
}
